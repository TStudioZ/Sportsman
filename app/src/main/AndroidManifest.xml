<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tstudioz.sportsman.app" >

    <application
        android:name="com.tstudioz.sportsman.app.SportsmanApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tstudioz.sportsman.app.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tstudioz.sportsman.app.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <service
            android:name="com.tstudioz.sportsman.app.WorkoutService"
            android:enabled="true"
            android:exported="false" >
        </service>

        <activity
            android:name="com.tstudioz.sportsman.app.WorkoutStartActivity"
            android:label="@string/title_activity_workout_start" >
        </activity>
        <activity
            android:name="com.tstudioz.sportsman.app.WorkoutActivity"
            android:label="@string/title_activity_workout" >
        </activity>
        <activity
            android:name="com.tstudioz.sportsman.app.WorkoutFinishActivity"
            android:label="@string/title_activity_workout_finish" >
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

</manifest>
